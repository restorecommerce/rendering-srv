{
  "redis": {
    "url": "redis://localhost:6379",
    "port": 6379,
    "offsetStoreInterval": 1000,
    "db-indexes": {
      "db-offsetStore": 0,
      "db-subject": 4
    }
  },
  "events": {
    "kafka": {
      "provider": "kafka",
      "groupId": "rendering-srv",
      "kafka": {
        "clientId": "rendering-srv",
        "brokers": [
          "localhost:29092"
        ]
      },
      "kafkaHost": "localhost:29092",
      "latestOffset": false,
      "renderRequest": {
        "messageObject": "io.restorecommerce.rendering.RenderRequest",
        "bufferFields": [
          { "payload" : ["templates", "data", "options" ] }
         ],
         "enableLogging": true
      },
      "renderResponse": {
        "messageObject": "io.restorecommerce.rendering.RenderResponse",
        "bufferFields": [
          "response"
        ],
        "enableLogging": true
      },
      "healthCheckCommand": {
        "messageObject": "io.restorecommerce.commandinterface.CommandRequest"
      },
      "healthCheckResponse": {
        "messageObject": "io.restorecommerce.commandinterface.CommandResponse"
      },
      "versionCommand": {
        "messageObject": "io.restorecommerce.commandinterface.CommandRequest"
      },
      "versionResponse": {
        "messageObject": "io.restorecommerce.commandinterface.CommandResponse"
      },
      "topics": {
        "rendering": {
          "topic": "io.restorecommerce.rendering",
          "events": [
            "renderRequest"
          ]
        },
        "command": {
          "topic": "io.restorecommerce.command",
          "events": [
            "healthCheckCommand"
          ]
        }
      }
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpcRendering",
        "provider": "grpc",
        "addr": "0.0.0.0:50057"
      }
    ]
  },
  "serviceNames": {
    "cis": "io-restorecommerce-rendering-cis",
    "reflection": "io-restorecommerce-rendering-reflection",
    "health": "grpc-health-v1"
  },
  "techUsers": [
    {
      "id": "hbs_user",
      "token": "change.this.token.number"
    }
  ]
}
