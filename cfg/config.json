{
  "redis": {
    "url": "redis://localhost:6379",
    "port": 6379,
    "offsetStoreInterval": 1000,
    "db-indexes": {
      "db-offsetStore": 0,
      "db-subject": 4
    }
  },
  "logger": {
    "console": {
      "handleExceptions": false,
      "level": "silly",
      "colorize": true,
      "prettyPrint": true
    },
    "fieldOptions": {
      "bufferFields": [
        {
          "fieldPath": "items.[0].data",
          "enableLogging": true
        },
        {
          "fieldPath": "decodedMsg.items.[0].data",
          "enableLogging": true
        },
        {
          "fieldPath": "messages.[0].items.[0].data",
          "enableLogging": true
        }
      ],
      "omitFields": [
        "body",
        "messages.[0].items.[0].templates.[0].body",
        "messages.[0].items.[0].templates.[0].layout",
        "messages.[0].items.[0].payload.bodies.[0].body",
        "items.[0].templates.[0].body",
        "items.[0].templates.[0].layout",
        "items.[0].payload.bodies.[0].body",
        "decodedMsg.items.[0].payload.bodies.[0].body",
        "decodedMsg.items.[0].templates.[0].body",
        "decodedMsg.items.[0].templates.[0].layout"
      ]
    }
  },
  "events": {
    "kafka": {
      "provider": "kafka",
      "groupId": "rendering-srv",
      "kafka": {
        "clientId": "rendering-srv",
        "brokers": [
          "localhost:29092"
        ]
      },
      "kafkaHost": "localhost:29092",
      "latestOffset": false,
      "renderRequest": {
        "messageObject": "io.restorecommerce.rendering.RenderRequestList"
      },
      "renderResponse": {
        "messageObject": "io.restorecommerce.rendering.RenderResponseList"
      },
      "healthCheckCommand": {
        "messageObject": "io.restorecommerce.commandinterface.CommandRequest"
      },
      "healthCheckResponse": {
        "messageObject": "io.restorecommerce.commandinterface.CommandResponse"
      },
      "versionCommand": {
        "messageObject": "io.restorecommerce.commandinterface.CommandRequest"
      },
      "versionResponse": {
        "messageObject": "io.restorecommerce.commandinterface.CommandResponse"
      },
      "topics": {
        "rendering": {
          "topic": "io.restorecommerce.rendering",
          "events": [
            "renderRequest"
          ]
        },
        "command": {
          "topic": "io.restorecommerce.command",
          "events": [
            "healthCheckCommand",
            "versionCommand"
          ]
        }
      }
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpcRendering",
        "provider": "grpc",
        "addr": "0.0.0.0:50057"
      }
    ]
  },
  "serviceNames": {
    "cis": "io-restorecommerce-rendering-cis",
    "reflection": "io-restorecommerce-rendering-reflection",
    "health": "grpc-health-v1"
  },
  "techUsers": {
    "id": "hbs_user",
    "token": "change.this.token.number"
  }
}
