{
  "name": "@restorecommerce/rendering-srv",
  "version": "1.2.3",
  "description": "Handlebars-HTML rendering microservice",
  "main": "lib/worker.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/rendering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "microservice",
    "rendering"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.4.7",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.1.1",
    "@restorecommerce/handlebars-helperized": "^1.0.8",
    "@restorecommerce/kafka-client": "^1.1.19",
    "@restorecommerce/logger": "^1.2.9",
    "@restorecommerce/service-config": "^1.0.11",
    "cheerio": "^0.22.0",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@restorecommerce/dev": "^0.0.7",
    "@restorecommerce/protos": "^6.7.0",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "c8": "^9.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.1",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "c8 --reporter=text npm run mocha",
    "lint": "eslint --fix src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --timeout 120000",
    "mocha-debug": "mocha -R spec test/*_test.js --inspect-brk",
    "test-core": "cross-env NODE_ENV=test npm run lint && npm run mocha-core",
    "lcov-report": "c8 report --reporter=lcov",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.js --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 20.8.0"
  }
}
