{
  "name": "@restorecommerce/rendering-srv",
  "version": "0.1.0",
  "description": "Handlebars-HTML rendering microservice",
  "main": "index.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/rendering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "microservice",
    "rendering"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/handlebars-helperized": "github:restorecommerce/handlebars-helperized",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.0",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.0",
    "cheerio": "^1.0.0-rc.2",
    "co": "^4.6.0",
    "lodash": "^4.17.2",
    "node-fetch": "^1.7.3"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/should": "^11.2.0",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nodemon": "^1.15.1",
    "should": "^12.0.0"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "export NODE_ENV=development; npm run createtopics && nodemon start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "npm run lint && npm run mocha",
    "lint": "tslint './lib/*.ts' './test*.ts' './service.ts' './start.ts'",
    "mocha": "export NODE_ENV=test;  mocha --timeout 60000 ./test/*.js --stack-trace --exit",
    "coveralls": "export NODE_ENV=test; istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/*.js --exit",
    "postinstall": "tsc -d",
    "createtopics": "node setupTopics.js io.restorecommerce.rendering",
    "test-debug": "export NODE_ENV=test;  mocha --inspect-brk",
    "test-prod-env": "NODE_ENV=prod mocha",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
