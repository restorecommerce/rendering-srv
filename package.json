  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://gitlab.n-fuse.co/restorecommerce/rendering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "microservice",
    "rendering"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/command-interface": "github:restorecommerce/command-interface",
    "@restorecommerce/handlebars-helperized": "^0.1.0",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.0",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.0",
    "bluebird": "^3.4.6",
    "cheerio": "^1.0.0-rc.2",
    "co": "^4.6.0",
    "debug": "^3.0.0",
    "lodash": "^4.17.2",
    "node-fetch": "^1.7.3",
    "sleep": "^5.1.1",
    "time": "^0.12.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/should": "^11.2.0",
    "co-mocha": "^1.2.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nock": "^9.0.13",
    "should": "^12.0.0"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "export NODE_ENV=development; npm run createtopics && node start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "export NODE_ENV=development;  npm run lint && npm run mocha",
    "lint": "export NODE_ENV=development; tslint './lib/*.ts' './test*.ts' './service.ts' './start.ts'",
    "mocha": "export NODE_ENV=development;  mocha --timeout 60000 ./test/*.js --stack-trace",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "postinstall": "tsc -d",
    "createtopics": "node setupTopics.js io.restorecommerce.rendering",
    "test-debug": "export NODE_ENV=development;  mocha --inspect-brk",
    "test-prod-env": "NODE_ENV=prod mocha",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
