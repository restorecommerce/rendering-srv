{
  "name": "@restorecommerce/rendering-srv",
  "version": "0.3.1",
  "description": "Handlebars-HTML rendering microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/rendering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "microservice",
    "rendering"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.3.12",
    "@restorecommerce/cluster-service": "^0.1.13",
    "@restorecommerce/grpc-client": "^0.4.5",
    "@restorecommerce/handlebars-helperized": "^0.1.20",
    "@restorecommerce/kafka-client": "^0.4.3",
    "@restorecommerce/logger": "^0.13.0",
    "@restorecommerce/protos": "^0.7.2",
    "@restorecommerce/service-config": "^0.4.27",
    "cheerio": "^0.22.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build",
    "test": "npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 60000 --stack-trace --exit",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "cross-env NODE_ENV=test mocha --inspect-brk",
    "test-prod-env": "cross-env NODE_ENV=prod mocha",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
