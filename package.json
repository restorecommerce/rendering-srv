{
  "name": "@restorecommerce/rendering-srv",
  "version": "1.2.3",
  "description": "Handlebars-HTML rendering microservice",
  "main": "lib/worker.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/rendering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "microservice",
    "rendering"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.7.2",
    "@restorecommerce/grpc-client": "^2.2.11",
    "@restorecommerce/handlebars-helperized": "^2.0.2",
    "@restorecommerce/kafka-client": "^1.3.1",
    "@restorecommerce/logger": "^1.3.6",
    "@restorecommerce/rc-grpc-clients": "^5.1.60",
    "@restorecommerce/service-config": "^1.1.5",
    "cheerio": "^1.1.2",
    "nice-grpc-server-reflection": "^3.0.1",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@restorecommerce/dev": "^0.1.1",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.10",
    "eslint": "9.35.0",
    "husky": "9.1.7",
    "nodemon": "3.1.10",
    "npm-run-all2": "^8.0.4",
    "rimraf": "6.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "vitest run",
    "lint": "eslint src",
    "build:es": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=linked",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:es",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/rendering-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/rendering-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
